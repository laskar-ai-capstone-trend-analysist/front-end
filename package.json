{
  "name": "tokopedia-trends-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next node_modules/.cache",
    "analyze": "ANALYZE=true npm run build",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "test:api": "node scripts/test-api.js",
    "health-check": "node scripts/health-check.js",
    "build:production": "npm run clean && npm run type-check && npm run lint && npm run build",
    "start:production": "NODE_ENV=production npm run start",
    "deploy:check": "npm run build:production && npm run health-check"
  },
  "dependencies": {
    "next": "15.3.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "typescript": "5.0.0",
    "tailwindcss": "4.0.0",
    "axios": "^1.6.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.400.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "15.3.3",
    "prettier": "^3.0.0",
    "@next/bundle-analyzer": "^15.0.0"
  }
}
